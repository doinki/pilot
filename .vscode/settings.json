{
  "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
  "search.exclude": { "pnpm-lock.yaml": true },
  "tailwindCSS.experimental.classRegex": [
    "noop\\s*\\(\\s*\"([^\"]*)\"\\s*\\)",
    "noop\\s*\\(\\s*'([^']*)'\\s*\\)"
  ],
  "tailwindCSS.experimental.configFile": {
    "apps/challenge/tailwind.config.js": "apps/challenge/**",
    "apps/crog/tailwind.config.js": "apps/crog/**",
    "apps/lotto/tailwind.config.js": "apps/lotto/**",
    "apps/sandbox/tailwind.config.cjs": "apps/sandbox/**",
    "packages/ui/tailwind.config.js": "packages/ui/**"
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsdk": "node_modules/typescript/lib"
}
