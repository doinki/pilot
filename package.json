{
  "name": "pilot",
  "packageManager": "pnpm@8.2.0",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "storybook": "turbo run storybook",
    "build": "turbo run build",
    "build:storybook": "turbo run build:storybook",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "lotto": "pnpm --filter=lotto",
    "hooks": "pnpm --filter=@pilot/hooks",
    "icons": "pnpm --filter=@pilot/icons",
    "tailwindcss": "pnpm --filter=@pilot/tailwindcss",
    "types": "pnpm --filter=@pilot/types",
    "ui": "pnpm --filter=@pilot/ui",
    "utils": "pnpm --filter=@pilot/utils",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "turbo": "^1.9.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "postcss",
        "preact",
        "react",
        "react-dom"
      ]
    }
  }
}
