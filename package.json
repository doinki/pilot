{
  "name": "pilot",
  "packageManager": "pnpm@8.1.1",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "storybook": "turbo storybook",
    "build": "turbo build",
    "build:storybook": "turbo build:storybook",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:watch": "turbo test:watch",
    "lint": "turbo lint",
    "lotto": "pnpm --filter=lotto",
    "hooks": "pnpm --filter=@pilot/hooks",
    "icons": "pnpm --filter=@pilot/icons",
    "types": "pnpm --filter=@pilot/types",
    "ui": "pnpm --filter=@pilot/ui",
    "utils": "pnpm --filter=@pilot/utils",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "turbo": "^1.8.8"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "preact",
        "react",
        "react-dom",
        "tailwindcss",
        "typescript"
      ]
    }
  }
}
